[pull]
	rebase = true
[includeIf "gitdir:~/work/**"]
  path = ~/work/.gitconfig
[init]
	defaultBranch = main
[core]
	excludesfile = ~/.config/git/gitignore
	editor = nvim

[merge]
	tool = "nvim"

[mergetool]
	keepBackup = false
	prompt = false

[mergetool "nvim"]
	cmd = "nvim -d -c \"wincmd l\" -c \"norm ]c\" \"$LOCAL\" \"$MERGED\" \"$REMOTE\""

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
